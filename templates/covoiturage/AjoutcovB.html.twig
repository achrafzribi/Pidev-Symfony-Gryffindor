     <br>

{% if app.flashes('success') is not empty %}
    <div class="alert alert-success">
        {% for message in app.flashes('success') %}
            {{ message }}
        {% endfor %}
    </div>
{% endif %}

{{ form_start(form,{'attr':{'novalidate':'novalidate'}})}}
              <div class="row">
                <div class="col-md-6 form-group">
                 {{ form_label(form.depart) }}
        {{ form_widget(form.depart,{'attr': {'class': 'form-control', 'placeholder': 'Enter your Lastname'}}) }}
        {{ form_errors(form.depart) }}
                </div>
                 <div class="col-md-6 form-group">
                     {{ form_label(form.destination) }}
        {{ form_widget(form.destination,{'attr': {'class': 'form-control', 'placeholder': 'Enter your Firstname'}}) }}
        {{ form_errors(form.destination) }}
                </div>
              </div>
               <div class="form-group mt-3">
                       {{ form_label(form.date_covoiturage) }}
                      
        {{ form_widget(form.date_covoiturage,{'attr': {'class': 'form-control', 'placeholder': 'Enter your reclamation Type'}}) }}

        {{ form_errors(form.date_covoiturage) }}
                
              </div>
              <div class="form-group mt-3">
                   {{ form_label(form.idc) }}
        {{ form_widget(form.idc,{'attr': {'class': 'form-control', 'placeholder': 'Enter your Number'}}) }}
        {{ form_errors(form.idc) }}
                </div>
              <div class="form-group mt-3">
                   <label>Prix</label>
        {{ form_widget(form.prix,{'attr': {'class': 'form-control', 'placeholder': 'nombre de place'}}) }}
        {{ form_errors(form.prix) }}
                </div>
             
              <div class="form-group mt-3">
               {{ form_label(form.nbrplace) }}
        {{ form_widget(form.nbrplace,{'attr': {'class': 'form-control', 'placeholder': 'Enter your Reclamation'}}) }}
        {{ form_errors(form.nbrplace) }}
              </div>
               <div class="form-group mt-3">
               {{ form_label(form.vehicule) }}
        {{ form_widget(form.vehicule,{'attr': {'class': 'form-control', 'placeholder': 'Enter your Reclamation'}}) }}
        {{ form_errors(form.vehicule) }}
              </div>
               <div class="text-center" style="margin-top: 20px;" >
                  {{form_widget(form.save,{'attr': { 'style': 'padding: 10px 20px;', 'placeholder': 'Enter your name'}})}}
                   
      
 

                  </div>
    {{ form_end(form) }}
           
</div>
</div>
   




