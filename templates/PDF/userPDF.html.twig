{% extends 'base-back.html.twig' %}

{% block body %}



                    <!-- [ content ] Start -->
                    <div class="container-fluid flex-grow-1 container-p-y">
                        <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('app_home_back') }}"><i class="feather icon-home"></i></a></li>
                                <li class="breadcrumb-item">Users</li>
                            </ol>
                        </div>

                        <div class="media align-items-center py-3 mb-3">

                            <div class="media-body ml-4">
                                <h4 class="font-weight-bold mb-0">First Name {{ user.FirstName }}<span class="text-muted font-weight-normal"></span></h4>
                                <h4 class="font-weight-bold mb-0">{{ user.LastName }}<span class="text-muted font-weight-normal"></span></h4>
                                <div class="text-muted mb-2">ID: {{ user.id }}</div>
                                
                        </div>

                        <div class="card mb-4">
                            <div class="card-body">
                                <table class="table user-view-table m-0">
                                    <tbody>
                                        <tr>
                                            <td>Type User:</td>
                                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                        </tr>
                                        <tr>
                                            <td>Email:</td>
                                            <td>{{ user.email }}</td>
                                        </tr>
                                         <tr>
                                            <td>Numero Telephone:</td>
                                            <td>{{ user.telephone }}</td>
                                        </tr>
                                         <tr>
                                            <td>Date de Naissance:</td>
                                            <td>{{ user.birthdate.format('d/m/Y')}}</td>
                                        </tr>
                                         <tr>
                                            <td>Gender:</td>
                                            <td>{{ user.gender }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                    <!-- [ content ] End -->
                                                <img src="assets/img/avatars/5-small.png" alt="" class="d-block ui-w-100 rounded-circle">
                                                {{ include('user/_delete_form.html.twig') }}
                                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">Edit</a>&nbsp;
                                <div class="media-body ml-4">
                                <a href="{{ path('app_pdf', {'id': user.id}) }}">PDF</a>
                                </div>
                                <a href="{{ path('app_user_index') }}">back to list</a>
                                
                            </div>
            
{% endblock %}