{% extends 'base-back.html.twig' %}

{% block title %}Reset Password!{% endblock %}

{% block header %}
<!DOCTYPE html>

<html lang="en" class="default-style layout-fixed layout-navbar-fixed">
<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="Empire is one of the unique admin template built on top of Bootstrap 4 framework. It is easy to customize, flexible code styles, well tested, modern & responsive are the topmost key factors of Empire Dashboard Template" />
    <meta name="keywords" content="bootstrap admin template, dashboard template, backend panel, bootstrap 4, backend template, dashboard template, saas admin, CRM dashboard, eCommerce dashboard">
    <meta name="author" content="Codedthemes" />
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico">
{% block css%}
    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">

    <!-- Icon fonts -->
    <link rel="stylesheet" href="{{asset('back-office/fonts/fontawesome.css')}}">
    <link rel="stylesheet" href="{{asset('back-office/fonts/ionicons.css')}}">
    <link rel="stylesheet" href="{{asset('back-office/fonts/linearicons.css')}}">
    <link rel="stylesheet" href="{{asset('back-office/fonts/open-iconic.css')}}">
    <link rel="stylesheet" href="{{asset('back-office/fonts/pe-icon-7-stroke.css')}}">
    <link rel="stylesheet" href="{{asset('back-office/fonts/feather.css')}}">

    <!-- Core stylesheets -->
  <link rel="stylesheet" href="{{asset('back-office/css/bootstrap-material.css')}}">
    <link rel="stylesheet" href="{{asset('back-office/css/shreerang-material.css')}}">
    <link rel="stylesheet" href="{{asset('back-office/css/uikit.css')}}">

    <!-- Libs -->
          <link rel="stylesheet" href="{{asset('back-office/libs/perfect-scrollbar/perfect-scrollbar.css')}}">
    <!-- Page -->
    <link rel="stylesheet" href="{{asset('back-office/css/pages/authentication.css')}}">
     {% endblock %}
{% endblock %}


{% block body %}

    
    <!-- [ Preloader ] Start -->
    <div class="page-loader">
        <div class="bg-primary"></div>
    </div>
    <!-- [ Preloader ] End -->

    <!-- [ content ] Start -->
    <div class="authentication-wrapper authentication-2 px-4">
    <section class="section register ">
            {% for message  in app.flashes('message') %}
            <div class="alert alert-info">
                {{ message }}
            </div>
            {% endfor %}
        </section>
        <section class="section register ">
            {% for danger  in app.flashes('danger') %}
                <div class="alert alert-danger">
                    {{ danger }}
                </div>
            {% endfor %}
        </section>
         <div class="authentication-inner py-5">
                <div class="p-4 p-sm-5">
                    <!-- [ Logo ] Start -->
                    <div class="d-flex justify-content-center align-items-center pb-2 mb-4">
                        <div class="ui-w-60">
                            <div class="w-100 position-relative">
                                <img src="{{asset('back-office/img/logo-dark.png')}}" alt="Brand Logo" class="img-fluid">
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <!-- [ Logo ] End -->

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="text-center text-muted font-weight-normal mb-4">Reset Your Password</h5>
                                </div>


                                <form method="post">
                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">New Password</label>
                                    <input type="password" name="password" id="inputPass" class="form-control" placeholder="new pass" required/>
                                    <input type="hidden"  name="token" value={token}">
                                    <div class="invalid-feedback">Please enter a valid password!</div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary btn-block" type="submit">Send</button>
                                </div>
                                </form>
                            </div>
                        </div>
                        
                       {% block js %}
    <!-- Core scripts -->
    <script src="{{asset('back-office/js/pace.js')}}"></script>
    <script src="{{asset('back-office/js/jquery-3.3.1.min.js')}}"></script>
    <script src="{{asset('back-office/libs/popper/popper.js')}}"></script>
    <script src="{{asset('back-office/js/bootstrap.js')}}"></script>
    <script src="{{asset('back-office/js/sidenav.js')}}"></script>
    <script src="{{asset('back-office/js/layout-helpers.js')}}"></script>
    <script src="{{asset('back-office/js/material-ripple.js')}}"></script>

    <!-- Libs -->
    <script src="{{asset('back-office/libs/perfect-scrollbar/perfect-scrollbar.js')}}"></script>

    <!-- Demo -->
    <script src="{{asset('back-office/js/demo.js')}}"></script>
    <script src="{{asset('back-office/js/analytics.js')}}"></script>
{% endblock %}

                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}